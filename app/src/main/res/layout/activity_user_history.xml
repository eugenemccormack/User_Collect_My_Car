<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:text="Collection Details"
            android:textColor="@color/dark_Blue"
            android:textSize="30dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/driver_profileImage_history"
            android:layout_width="113dp"
            android:layout_height="112dp"
            android:src="@drawable/ic_launcher_background" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/collectID"
                android:layout_width="100dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:text="Pick Up ID"
                android:gravity="center"
                android:textColor="@color/dark_Blue"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/collectionID_history"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:background="@drawable/register_edittext"
                android:gravity="center"
                android:text="Collection Number"
                android:textAlignment="center"
                android:textColor="@color/dark_Blue"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/date"
                android:layout_width="100dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:text="Date"
                android:gravity="center"
                android:textColor="@color/dark_Blue"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/driver_date_history"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:background="@drawable/register_edittext"
                android:gravity="center"
                android:text="Date"
                android:textAlignment="center"
                android:textColor="@color/dark_Blue"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/from_location"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="From"
                android:gravity="center"
                android:textColor="@color/dark_Blue"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/from_location_history"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:background="@drawable/register_edittext"
                android:gravity="center"
                android:text="Location"
                android:textAlignment="center"
                android:textColor="@color/dark_Blue"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/dropoff"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="To"
                android:gravity="center"
                android:textColor="@color/dark_Blue"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/to_location_history"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:background="@drawable/register_edittext"
                android:gravity="center"
                android:text="Location"
                android:textAlignment="center"
                android:textColor="@color/dark_Blue"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/name"
                android:layout_width="100dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:text="Name"
                android:gravity="center"
                android:textColor="@color/dark_Blue"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/driver_name_history"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:background="@drawable/register_edittext"
                android:gravity="center"
                android:text="Name"
                android:textAlignment="center"
                android:textColor="@color/dark_Blue"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/email"
                android:layout_width="100dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:text="Email"
                android:gravity="center"
                android:textColor="@color/dark_Blue"
                android:textSize="20dp" />

            <TextView

                android:id="@+id/driver_email_history"
                android:layout_height="wrap_content"
                android:layout_width="225dp"
                android:background="@drawable/register_edittext"
                android:gravity="center"
                android:text="Email"
                android:textAlignment="center"
                android:textColor="@color/dark_Blue"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/phone"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="Phone"
                android:textColor="@color/dark_Blue"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/driver_phone_history"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:background="@drawable/register_edittext"
                android:gravity="center"
                android:text="Phone"
                android:textAlignment="center"
                android:textColor="@color/dark_Blue"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/complete"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="Status"
                android:textColor="@color/dark_Blue"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/driver_complete_history"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:background="@drawable/register_edittext"
                android:gravity="center"
                android:text="Status"
                android:textAlignment="center"
                android:textColor="@color/dark_Blue"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/price"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="Price"
                android:textColor="@color/dark_Blue"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/driver_price_history"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:background="@drawable/register_edittext"
                android:gravity="center"
                android:text="Price"
                android:textAlignment="center"
                android:textColor="@color/dark_Blue"
                android:textSize="20dp" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">


        <Button
            android:id="@+id/select_photos"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_border"
            android:text="View Photos"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/driver_profileImage"
            app:layout_constraintVertical_bias="0.732" />

    </LinearLayout>

    </LinearLayout>

</ScrollView>
